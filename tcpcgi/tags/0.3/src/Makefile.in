# $Id$
GOSH = @GOSH@
GAUCHE_CONFIG = @GAUCHE_CONFIG@
INSTALL_TYPE = @INSTALL_TYPE@
INSTALL = @INSTALL@

TARGET_DIR = lib
TARGET = tcpcgi.scm \
         tcpcgi/state.scm \
         tcpcgi/dispatch.scm \
         tcpcgi/errordoc.scm \
         tcpcgi/filer.scm \
         tcpcgi/version.scm

GENERATED = 

SCM_INSTALL_DIR = $(DESTDIR)`$(GAUCHE_CONFIG) --$(INSTALL_TYPE)libdir`



all :

check :

test :

install : all
	if test ! -d $(SCM_INSTALL_DIR)/tcpcgi; then \
	  $(INSTALL) -d $(SCM_INSTALL_DIR)/tcpcgi; \
	fi
	for f in $(TARGET); do \
	  $(INSTALL) -m 444 $(TARGET_DIR)/$$f $(SCM_INSTALL_DIR)/$$f; \
	done

uninstall :
	for f in $(TARGET); do \
	  rm -f $(SCM_INSTALL_DIR)/$$f; \
	done
	rmdir $(SCM_INSTALL_DIR)/tcpcgi

clean :
	rm -f core *~ lib/*~ lib/*.orig \
        lib/tcpcgi/*~ lib/tcpcgi/*.orig \
        $(GENERATED)

distclean : clean
	rm -f Makefile

maintainer-clean : clean
	rm -f Makefile


